<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/main"
    android:padding="16dp"
    android:layout_marginTop="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Judul -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="e Store"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:paddingVertical="8dp" />

        <!-- Search bar -->
        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Cari Kendaraan"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="@drawable/bg_input_round"
            android:drawableStart="@drawable/ic_search"
            android:drawablePadding="8dp" />

        <!-- Kategori horizontal -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:paddingTop="16dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:id="@+id/kategori_yamaha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <!-- Chip teks di belakang -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:background="@drawable/bg_category_chip"
                        android:gravity="center_vertical"
                        android:paddingStart="50dp"
                        android:paddingEnd="20dp"
                        android:text="Kulkas"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <!-- Gambar di depan -->
                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/bg_circle"
                        android:src="@drawable/kulkas" />

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/kategori_honda"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <!-- Chip teks di belakang -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:background="@drawable/bg_category_chip"
                        android:gravity="center_vertical"
                        android:paddingStart="50dp"
                        android:paddingEnd="20dp"
                        android:text="Honda"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <!-- Gambar di depan -->
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="50dp"
                        android:background="@drawable/bg_circle"
                        android:src="@drawable/mesin_cuci" />

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/kategori_vespa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <!-- Chip teks di belakang -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:background="@drawable/bg_category_chip"
                        android:gravity="center_vertical"
                        android:paddingStart="50dp"
                        android:paddingEnd="20dp"
                        android:text="Blender"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <!-- Gambar di depan -->
                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/bg_circle"
                        android:src="@drawable/ic_blender" />

                </FrameLayout>


                <!-- Tambah kategori lain di sini -->
            </LinearLayout>
        </HorizontalScrollView>

        <!-- Sedang Tren -->
        <TextView
            android:text="Sedang Tren"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="16dp"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Tren HorizontalScroll -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:paddingVertical="8dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <!-- Contoh item tren -->
                <LinearLayout
                    android:id="@+id/yamaha_xsr"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:clickable="true"
                    android:layout_width="250dp"
                    android:layout_height="260dp">

                    <ImageView
                        android:src="@drawable/kulkas"
                        android:layout_width="match_parent"
                        android:layout_height="200dp" />

                    <TextView
                        android:text="Kulkas Samsung"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="Kuat, Praktis, Elegan"
                        android:textSize="14sp"
                        android:textColor="@android:color/darker_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <!-- Contoh item tren ke 2 -->
                <LinearLayout
                    android:id="@+id/aerox_alpha"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:layout_width="250dp"
                    android:layout_height="260dp">

                    <ImageView
                        android:src="@drawable/chopper"
                        android:layout_width="match_parent"
                        android:layout_height="200dp" />

                    <TextView
                        android:text="Mesin Cuci LG Front Load 8KG"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="Membersihkan sampai dalam"
                        android:textSize="12sp"
                        android:textColor="@android:color/darker_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <!-- Trend ketiga -->
                <LinearLayout
                    android:id="@+id/honda_beat"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:layout_width="250dp"
                    android:layout_height="260dp">

                    <ImageView
                        android:src="@drawable/mesin_cuci"
                        android:layout_width="match_parent"
                        android:layout_height="200dp" />

                    <TextView
                        android:text="Chopper Mitochiba"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="Kuat dan Tahan Lama"
                        android:textSize="12sp"
                        android:textColor="@android:color/darker_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>

        <!-- Pilihan Teratas -->
        <TextView
            android:text="Pilihan Teratas"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:paddingTop="16dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Satu item pilihan teratas -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Gambar motor -->
            <ImageView
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:src="@drawable/air_friyer"
                android:scaleType="centerCrop"/>

            <!-- Spasi antar gambar dan teks -->
            <Space
                android:layout_width="12dp"
                android:layout_height="wrap_content" />

            <!-- Kontainer teks -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Judul motor -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Air Fryer"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <!-- Deskripsi motor -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sempurna untuk berbagai acara"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="12sp"
                    android:maxLines="1"
                    android:ellipsize="end" />

            </LinearLayout>

        </LinearLayout>
        <!-- Satu item pilihan teratas -->
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Gambar motor -->
            <ImageView
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:src="@drawable/kulkas2"/>

            <!-- Spasi antar gambar dan teks -->
            <Space
                android:layout_width="12dp"
                android:layout_height="wrap_content" />

            <!-- Kontainer teks -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Judul motor -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kulkas Sharp 2025"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <!-- Deskripsi motor -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bergaya dan andal di perkotaan"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="12sp"
                    android:maxLines="1"
                    android:ellipsize="end" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
