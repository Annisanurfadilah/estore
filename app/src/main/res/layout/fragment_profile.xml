<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@color/blue">

            <ImageButton
                android:id="@+id/btn_back"
                android:src="@drawable/ic_arrow_back"
                android:background="@android:color/transparent"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="Back" />

            <TextView
                android:layout_centerInParent="true"
                android:text="Halo, Budi!"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <!-- Foto profil -->
        <ImageView
            android:src="@drawable/ic_user"
            android:background="@drawable/bg_circle"
            android:elevation="8dp"
            android:layout_marginTop="-40dp"
            android:layout_width="90dp"
            android:layout_height="90dp" />

        <!-- Info Profil -->
        <androidx.cardview.widget.CardView
            android:layout_margin="16dp"
            android:elevation="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Info Profil"
                    android:textStyle="bold"
                    android:textColor="@color/blue"
                    android:textSize="24dp"
                    android:layout_marginBottom="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <!-- Nama -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:text="Nama"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textSize="20sp"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:id="@+id/edt_name"
                        android:hint="Budi"
                        android:text="Budi"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="48dp"
                        android:background="@null"
                        android:padding="4dp" />
                </LinearLayout>

                <!-- Status -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:text="Status"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textSize="20dp"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:id="@+id/edt_status"
                        android:hint="Bekerja"
                        android:text="Bekerja"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="48dp"
                        android:background="@null"
                        android:padding="4dp" />
                </LinearLayout>

                <!-- Tanggal Lahir -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:text="Tanggal Lahir"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textSize="16dp"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:id="@+id/edt_dob"
                        android:hint="27-07-1991"
                        android:text="27-07-1991"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="48dp"
                        android:background="@null"
                        android:padding="4dp" />
                </LinearLayout>

                <!-- Jenis Kelamin -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:text="Jenis Kelamin"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textSize="17dp"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:id="@+id/edt_gender"
                        android:hint="Laki-laki"
                        android:text="Laki-laki"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="48dp"
                        android:background="@null"
                        android:padding="4dp" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Nomor HP & Email -->
        <androidx.cardview.widget.CardView
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="24dp"
            android:elevation="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Nomor HP dan Email"
                    android:textStyle="bold"
                    android:textColor="@color/blue"
                    android:textSize="20dp"
                    android:layout_marginBottom="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <!-- Nomor HP -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:text="Nomor HP"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textSize="20dp"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:id="@+id/edt_phone"
                        android:hint="085711229888"
                        android:text="085711229888"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="48dp"
                        android:background="@null"
                        android:padding="4dp" />
                </LinearLayout>

                <!-- Email -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:text="Email"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textSize="20dp"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:id="@+id/edt_email"
                        android:hint="budi97@gmail.com"
                        android:text="budi97@gmail.com"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="48dp"
                        android:background="@null"
                        android:padding="4dp" />
                </LinearLayout>



            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
