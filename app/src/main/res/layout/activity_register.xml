<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Lingkaran atas -->
    <View
        android:id="@+id/topCircle"
        android:layout_width="461dp"
        android:layout_height="407dp"
        android:background="@drawable/bg_half_circle_up"
        android:translationX="-50dp"
        android:translationY="-170dp" />

    <!-- Tulisan Rider Store -->
    <ImageView
        android:id="@+id/titleLogo"
        android:src="@drawable/tulisanrider"
        android:layout_centerHorizontal="true"
        android:translationY="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Kolom username -->
    <LinearLayout
        android:id="@+id/usernameLayout"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:translationY="280dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:src="@drawable/ic_user"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="4dp" />

        <EditText
            android:id="@+id/editUsername"
            android:hint="Username"
            android:background="@drawable/rounded_edittext"
            android:padding="8dp"
            android:layout_width="200dp"
            android:layout_height="48dp" />
    </LinearLayout>

    <!-- Kolom email -->
    <LinearLayout
        android:id="@+id/emailLayout"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:translationY="350dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:src="@drawable/ic_email"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="4dp" />

        <EditText
            android:id="@+id/editEmail"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:background="@drawable/rounded_edittext"
            android:padding="8dp"
            android:layout_width="200dp"
            android:layout_height="48dp" />
    </LinearLayout>

    <!-- Kolom password -->
    <LinearLayout
        android:id="@+id/passwordLayout"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:translationY="420dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:src="@drawable/ic_password"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="4dp" />

        <EditText
            android:id="@+id/editPassword"
            android:hint="Password"
            android:inputType="textPassword"
            android:background="@drawable/rounded_edittext"
            android:padding="8dp"
            android:layout_width="200dp"
            android:layout_height="48dp" />
    </LinearLayout>

    <!-- Tombol registrasi -->
    <Button
        android:id="@+id/buttonRegister"
        android:text="Registrasi"
        android:textColor="@android:color/white"
        android:backgroundTint="#1A237E"
        android:translationY="500dp"
        android:layout_centerHorizontal="true"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

    <!-- Link ke login -->
    <TextView
        android:id="@+id/loginLink"
        android:text="Sudah punya akun? Login"
        android:textColor="#000"
        android:translationY="560dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Lingkaran bawah -->
    <View
        android:id="@+id/bottomCircle"
        android:background="@drawable/bg_half_circle"
        android:translationX="100dp"
        android:translationY="650dp"
        android:layout_width="500dp"
        android:layout_height="300dp" />

</RelativeLayout>
